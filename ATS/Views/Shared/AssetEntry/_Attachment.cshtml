


<div class="container-fluid">

    <div class="panel panel-success" style="border-color: #64a1b9;">
        <div class="panel-heading" style="background-color: #0c717d; ">
            <h3 class="panel-title headtitle"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Attachment</h3>
        </div>
        <div class="panel-body">

            <form class="form-horizontal custom-form" role="form">
                <fieldset>
                    <div class="form-group">
                        <div class="row">
                            <div>
                                <label class="control-label col-md-2 " for="vendor" id="vendorLabel">Vendor :</label>
                                <div class="col-md-3">
                                    <select class="selectpicker form-control" id="ddlVendor" name="vendor">
                                        <option>---Select---</option>
                                        <option>Computer</option>
                                        <option>Printer</option>
                                        <option>UPS</option>
                                    </select>
                                </div>
                            </div>


                            <div>
                                <label class="col-md-3 control-label" for="purchasePriceNo" id="purchasePriceLabel">Purchase Price:</label>
                                <div class="col-md-3">
                                    <input id="purchasePriceTextbox" name="purchasePrice" type="text" placeholder="Purchase Price" class="form-control input-md" required />
                                </div>

                            </div>
                            <div class="col-md-1">
                            </div>


                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div>
                                <label class="col-md-2 control-label" for="P/ONo" id="P/OLabel">P/O No:</label>
                                <div class="col-md-3">
                                    <input id="P/ONoTextbox" name="P/ONo" type="text" placeholder="P/O No" class="form-control input-md" required />
                                </div>

                            </div>


                            <div>
                                <label class="col-md-3 control-label" for="purchaseDate" id="purchaseDateLabel">Purchase Date:</label>
                                <div class="col-md-3">
                                    <input id="purchaseDateTextbox" name="purchaseDate" type="text" placeholder="Purchase Date" class="form-control input-md" required />
                                </div>

                            </div>
                            <div class="col-md-1">
                            </div>


                        </div>
                    </div>

                    <div style="text-align:right">
                        <div class="col-sm-offset-2 col-sm-10">

                            <input type="submit" id="assetEditSaveBtn" name="assetEditSaveBtn" value="Save" class="btn btn-group-lg btn-success" />
                            <input type="submit" id="assetEditCancelBtn" name="assetEditCancelBtn" value="Cancel" class="btn btn-group-lg btn-warning" />
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>