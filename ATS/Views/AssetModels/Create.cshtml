
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>
    <div class="container-fluid">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title headtitle">@*<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>*@Asset Model Create</h3>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" method="post" name="assetModelsetupFrom" id="assetModelsetupFrom">
                    <div class="form-group">
                        <label for="assetManufecture" class="col-sm-2 control-label">Manufecture : </label>
                        <div class="col-sm-6">
                            <select class="selectpicker form-control" id="ddlAssetManufecture" name="assetManufecture">
                                <option>---Select---</option>
                                <option>Computer</option>
                                <option>Printer</option>
                                <option>UPS</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="assetGroup" class="col-sm-2 control-label">Asset Group : </label>
                        <div class="col-sm-6">
                            <select class="selectpicker form-control" id="ddlAssetGroup" name="assetGroup">
                                <option>---Select---</option>
                                <option>Computer</option>
                                <option>Printer</option>
                                <option>UPS</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="assetName" class="col-sm-2 control-label">Asset Name :</label>
                        <div class="col-sm-6">
                            <select class="selectpicker form-control" id="ddlAssetName" name="assetName">
                                <option>---Select---</option>
                                <option>Laptop</option>
                                <option>Desktop</option>
                                <option>Tosiba</option>
                            </select>
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="shortName" class="col-sm-2 control-label">Short Name :</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="assetModelShortName" name="shortName" required="">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Code" class="col-sm-2 control-label">Code :</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="assetModelCode" name="Code" readonly="readonly">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Description" class="col-sm-2 control-label">Description :</label>
                        <div class="col-sm-6">
                            <textarea name="assetModelDesc" cols="5" rows="2" id="assetModelDesTextBox" class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="form-group" style="text-align:right">
                        <div class="col-sm-offset-2 col-sm-6">

                            <input type="submit" id="assetModelSavebtn" name="assetModelSave" value="Save" class="btn btn-group-lg btn-success" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="panel-footer" style="overflow:hidden;text-align:right;">
            </div>
        </div>


    </div>
</body>
