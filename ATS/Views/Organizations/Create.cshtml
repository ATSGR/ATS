
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>
    <div class="container-fluid">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title headtitle">@*<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>*@Organization Setup Create</h3>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" method="post" name="OrganizationForm" id="organizationform">
                    <div class="form-group">
                        <label for="OrganizationName" class="col-sm-2 control-label">Name : </label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="organizationTextBox" name="OrganizationName" placeholder="Enter Your Organization Name" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Code" class="col-sm-2 control-label">Code :</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="organizationcodeTextBox" name="OrganizationCode" readonly="readonly">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Location" class="col-sm-2 control-label">Location : </label>
                        <div class="col-sm-6">
                            <textarea name="OrganizationLocationName" cols="5" rows="2" id="OrgLocTextBox" class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="form-group" style="text-align:right">
                        <div class="col-sm-offset-2 col-sm-6">

                            <input type="submit" id="Orgsetupsubmitbtn" name="Orgsetupsubmitbtn" value="Save" class="btn btn-group-lg btn-success" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="panel-footer" style="overflow:hidden;text-align:right;">
            </div>
        </div>


    </div>
</body>