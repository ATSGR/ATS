
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="panel panel-success" style="border-color: #64a1b9;">
        <div class="panel-heading" style="background-color: #0c717d; ">
            <h3 class="panel-title headtitle">@*<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>*@Asset Manufecturer List</h3>
        </div>
        <div class="panel-body">


            <form class="form-horizontal custom-form" role="form">
                <div class="form-group">
                    <div class="row">

                        <div class="col-md-6">
                            <label class="control-label col-sm-4" for="assetGroup">Asset Group:</label>
                            <div class="col-md-4">
                                <select class="selectpicker form-control" id="ddlAssetGroup" name="assetType">
                                    <option>---Select---</option>
                                    <option>Computer</option>
                                    <option>Printer</option>
                                    <option>UPS</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="control-label col-sm-4" for="code">Code :</label>
                            <div class="col-md-4">
                                <input id="codeTextBox" name="code" type="text" placeholder="Code" class="form-control input-md">
                            </div>
                            <div class="col-md-1">
                            </div>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="row">

                        <div class="col-md-6">
                            <label class="control-label col-sm-4" for="assetName">Asset Name:</label>
                            <div class="col-md-4">
                                <input id="assetNameTextBox" name="name" type="text" placeholder="Asset Name" class="form-control input-md">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="control-label col-sm-4" for="shortName">Short Name :</label>
                            <div class="col-md-4">
                                <input id="shortNameTextBox" name="shortName" type="text" placeholder="Short Name" class="form-control input-md">
                            </div>
                            <div class="col-md-1">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group"style="text-align:right">
                    @*<label class="col-md-4 control-label" for="submit"></label>*@
                    <div class="col-sm-offset-2 col-sm-8">
                        <button id="assetManufectureSearbtn" name="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>


            </form>


            <span>
                <a href="@Url.Action("Create", new { @class = "btn btn-warning" })"><span class="glyphicon glyphicon-plus-sign"></span> Create New</a>
            </span>
            <div class="table-responsive">
                <table id="orgSetup" class="table table-striped table-hover table-bordered " border="0" cellpadding="0" cellspacing="0">
                    <thead style="background-color:#cde6ca">
                        <tr>
                            <th>Asset Group</th>
                            <th>Code</th>
                            <th>Asset Name </th>
                            <th>Short Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>Dhaka</td>
                            <td>Mogbazar</td>
                            <td>Asset Name</td>
                            <td>Basis_Mog</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "", new { @class = "btn btn-primary btn-sm " })
                                @Html.ActionLink("Detail", "Details", "", new { @class = "btn btn-warning btn-sm " })
                                @Html.ActionLink("Delete", "Delete", "", new { @class = "btn btn-danger btn-sm " })
                            </td>

                        </tr>

                        <tr>
                            <td>Dhaka</td>
                            <td>Rampura</td>
                            <td>Mogbazar</td>
                            <td>Basis_Ram</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "", new { @class = "btn btn-primary btn-sm " })
                                @Html.ActionLink("Detail", "Details", "", new { @class = "btn btn-warning btn-sm " })
                                @Html.ActionLink("Delete", "Delete", "", new { @class = "btn btn-danger btn-sm " })
                            </td>

                        </tr>

                        <tr>
                            <td>Comilla</td>
                            <td>Dharmasagor</td>
                            <td>Mogbazar</td>
                            <td>Basis_Com</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "", new { @class = "btn btn-primary btn-sm " })
                                @Html.ActionLink("Detail", "Details", "", new { @class = "btn btn-warning btn-sm " })
                                @Html.ActionLink("Delete", "Delete", "", new { @class = "btn btn-danger btn-sm " })
                            </td>

                        </tr>


                    </tbody>
                </table>
            </div>
        </div>

    </div>


</div>






