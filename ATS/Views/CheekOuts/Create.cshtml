
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<div class="container-fluid">
    <div class="panel panel-success" style="border-color: #64a1b9;">
        <div class="panel-heading" style="background-color: #0c717d; ">
            <h3 class="panel-title headtitle">@*<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>*@Cheek Out</h3>
        </div>
        <div class="panel-body">

            <form class="form-horizontal custom-form" role="form">
                <fieldset>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label class="control-label col-md-4 " for="employeeNo" id="employeeNoLabel">Employee No :</label>
                                <div class="col-md-4">
                                    <select class="selectpicker form-control" id="ddlemployeeNo" name="employeeNo">
                                        <option>---Select---</option>
                                        <option>Computer</option>
                                        <option>Printer</option>
                                        <option>UPS</option>
                                    </select>
                                </div>
                            </div>


                            <div class="col-md-6">
                                <label class="control-label col-md-4 " for="selectEmploye" id="selectEmployeLabel">Select Employee :</label>
                                <div class="col-md-4">
                                    <select class="selectpicker form-control" id="ddlselectEmploye" name="selectEmploye">
                                        <option>---Select---</option>
                                        <option>Laptop</option>
                                        <option>Desktop</option>
                                        <option>Tisshue</option>
                                    </select>

                                </div>
                                <div class="col-md-1">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label class="col-md-4 control-label" for="entryDate" id="entryDateLabel">Entry Date:</label>
                                <div class="col-md-4">
                                    <div class='input-group date' id='datetimepicker1'>
                                        <input type='text' class="form-control" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>

                            </div>

                            <div class="col-md-6">
                                <label class="col-md-4 control-label" for="dueDate" id="dueDateLabel">Due Date:</label>
                                <div class="col-md-4">
                                    <div class='input-group date' id='datetimepicker1'>
                                        <input type='text' class="form-control" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                    <div class="col-md-1">
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">

                            <div class="col-md-6">
                                <label class="col-md-4 control-label" for="cheekOutFor" id="cheekOutForLabel">Cheek Out For:</label>
                                <div class="col-md-4">
                                    <select class="selectpicker form-control" id="ddlcheekOutFor" name="cheekOutFor">
                                        <option>---Select---</option>
                                        <option>Laptop</option>
                                        <option>Desktop</option>
                                        <option>Tisshue</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="col-md-4 control-label" for="location" id="locationLabel">Location:</label>
                                <div class="col-md-4">
                                    <select class="selectpicker form-control" id="ddllocation" name="location">
                                        <option>---Select---</option>
                                        <option>Laptop</option>
                                        <option>Desktop</option>
                                        <option>Tisshue</option>
                                    </select>
                                    @*<input type="checkbox" value="Search" data-toggle="modal" data-target="#myModal">*@
                                    <input type="button" id="searchBtn" name="searchBtn" value="Search" data-toggle="modal" data-target="#myModal" class="btn btn-group-lg btn-primary" />

                                </div>

                                <div class="col-md-1">
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label class="col-md-4 control-label" for="assetAdd" id="assetAddLabel">Asset Add:</label>
                                <div class="col-md-4">
                                    <select class="selectpicker form-control" id="ddlassetAdd" name="assetAdd">
                                        <option>---Select---</option>
                                        <option>Laptop</option>
                                        <option>Desktop</option>
                                        <option>Tisshue</option>
                                    </select>


                                    <input type="submit" id="assetassetAddBtn" name="assetAddBtn" value="Add" class="btn btn-group-lg btn-warning" />
                                </div>

                            </div>

                            <div class="col-md-6">
                                <label class="col-md-4 control-label" for="assetList" id="assetListLabel">Asset List:</label>

                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Asset No</th>
                                            <th>Discription</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>01</td>
                                            <td>Doe</td>

                                        </tr>
                                        <tr>
                                            <td>02</td>
                                            <td>Moe</td>

                                        </tr>
                                        <tr>
                                            <td>03</td>
                                            <td>Dooley</td>

                                        </tr>
                                    </tbody>
                                </table>

                                <div class="col-md-1">
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="comments" id="commentsLabel" class="control-label col-md-2">Comments:</label>
                        <div class="col-md-4">
                            <textarea class="form-control  " rows="5" id="commentsTextarea" style="width:100%;"></textarea>
                        </div>
                    </div>

                    <div style="text-align:right">
                        <div class="col-sm-offset-2 col-sm-10">

                            <input type="submit" id="saveBtn" name="saveBtn" value="Save " class="btn btn-group-lg btn-success" />

                        </div>
                    </div>


                </fieldset>

            </form>

        </div>

    </div>


</div>



<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Location Search</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <fieldset>


                        <div class="form-group">
                            <label class="control-label col-md-3 " for="organization" id="organizationLabel">Organization:</label>
                            <div class="col-md-4">
                                <select class="selectpicker form-control" id="ddlorganization" name="organization">
                                    <option>---Select---</option>
                                    <option>Computer</option>
                                    <option>Printer</option>
                                    <option>UPS</option>
                                </select>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 " for="branch" id="branchLabel">Branch :</label>
                            <div class="col-md-4">
                                <select class="selectpicker form-control" id="ddlbranch" name="branch">
                                    <option>---Select---</option>
                                    <option>Computer</option>
                                    <option>Printer</option>
                                    <option>UPS</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label" for="brand" id="locationLabel">Location:</label>
                            <div class="col-md-4">
                                <input id="locationTextbox" name="location" type="text" placeholder="Location" class="form-control input-md" required />
                            </div>
                        </div>
                        <div style="text-align:right">
                            <div class="col-sm-offset-2 col-sm-5">
                                <input type="submit" id="searchBtn" name="searchBtn" value="Search " class="btn btn-group-lg btn-primary" />
                            </div>
                        </div>
                        <div class="col-md-6">


                            <table class="table">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th> Select</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>01</td>
                                        <td>Doe</td>
                                        <td><input type="submit" id="selectBtn" name="selectBtn" value="Select " class="btn btn-group-lg btn-success" /></td>

                                    </tr>
                                    <tr>
                                        <td>02</td>
                                        <td>Moe</td>
                                        <td><input type="submit" id="selectBtn" name="selectBtn" value="Select " class="btn btn-group-lg btn-success" /></td>

                                    </tr>
                                    <tr>
                                        <td>03</td>
                                        <td>Dooley</td>
                                        <td><input type="submit" id="selectBtn" name="selectBtn" value="Select " class="btn btn-group-lg btn-success" /></td>

                                    </tr>
                                </tbody>
                            </table>

                            <div class="col-md-1">
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

</div>


